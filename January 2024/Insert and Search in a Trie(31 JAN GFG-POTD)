class Solution {
public:
    void insert(struct TrieNode *root, string key) {
        for(const char &ch : key) {
            if(root->children[ch - 'a'] == nullptr) {
                root->children[ch - 'a'] = new TrieNode();
            }
            root = root->children[ch - 'a'];
        }
        root->isLeaf = true;
    }
    
    bool search(struct TrieNode *root, string key) {
        for(const char &ch : key) {
            if(root->children[ch - 'a'] == nullptr)
                return false;
            
            root = root->children[ch - 'a'];
        }
        return root->isLeaf;
    }
};
